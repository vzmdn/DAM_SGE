                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Definitions -->
    <menuitem
            id='menu_cesta_root'
            name='Cesta'
            sequence='10'/>

    <menuitem
            id="menu_cliente"
            name="Cliente"
            parent="menu_cesta_root"
            sequence="20"
            action="action_cliente"/>

    <menuitem
            id="menu_carrito"
            name="Carrito"
            parent="menu_cesta_root"
            sequence="20"
            action="action_carrito"/>

    <!-- Menu Item: Cajero -->
