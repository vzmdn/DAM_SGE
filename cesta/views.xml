<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View: Cliente -->
    <record id="view_tree_cliente" model="ir.ui.view">
        <field name="name">cesta.cliente.tree</field>
        <field name="model">cesta.cliente</field>
        <field name="arch" type="xml">
            <tree string="Cliente">
                <field name="nombre"/>
                <field name="numero_socio"/>
            </tree>
        </field>
    </record>

    <!-- Tree View: Carrito -->
    <record id="view_tree_carrito" model="ir.ui.view">
        <field name="name">cesta.carrito.tree</field>
        <field name="model">cesta.carrito</field>
        <field name="arch" type="xml">
            <tree string="Carrito">
                <field name="coste"/>
                <field name="fecha"/>
            </tree>
        </field>
    </record>

    <!-- Tree View: Cajero -->
    <record id="view_tree_cajero" model="ir.ui.view">
        <field name="name">cesta.cajero.tree</field>
        <field name="model">cesta.cajero</field>
        <field name="arch" type="xml">
            <tree string="Cajero">
                <field name="nombre"/>
                <field name="fecha_inicio"/>
            </tree>
        </field>
    </record>

    <!-- Tree View: Encargado -->
    <record id="view_tree_encargado" model="ir.ui.view">
        <field name="name">cesta.encargado.tree</field>
