        <field name="name">cesta.producto.tree</field>
        <field name="model">cesta.producto</field>
        <field name="arch" type="xml">
            <tree string="Producto">
                <field name="nombre"/>
                <field name="precio_unidad"/>
                <field name="stock"/>
                <field name="tipo"/>
            </tree>
        </field>
    </record>


    <!-- Action: Cliente -->
    <record id="action_cliente" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">cesta.cliente</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Gestiona los clientes.</p>
        </field>
    </record>

    <!-- Action: Carrito -->
    <record id="action_carrito" model="ir.actions.act_window">
        <field name="name">Carritos</field>
        <field name="res_model">cesta.carrito</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Gestiona los carritos</p>
        </field>
    </record>

