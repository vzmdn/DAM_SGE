    <!-- Form View: Cliente -->
    <record id="view_form_cliente" model="ir.ui.view">
        <field name="name">cesta.cliente.form</field>
        <field name="model">cesta.cliente</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="numero_socio"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

